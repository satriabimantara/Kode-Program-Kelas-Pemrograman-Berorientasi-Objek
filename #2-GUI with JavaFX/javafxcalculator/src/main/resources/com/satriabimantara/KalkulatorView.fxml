<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.satriabimantara.KalkulatorController">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Angka 1:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtAngka1" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Angka 2:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtAngka2" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="HITUNG (+)" onAction="#handleHitungJumlah" maxWidth="Infinity"/>
    
    <Separator/>
    
    <Label fx:id="lblHasil" text="HASIL: 0" style="-fx-font-weight: bold;"/>

</VBox>